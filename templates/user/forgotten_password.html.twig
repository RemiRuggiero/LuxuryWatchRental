{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - {{ parent() }}{% endblock %}

{% block body %}


<div class="container my-5">
    <div class="row">
        <form method="post" class="col-12 col-lg-6 offset-lg-3">
            <h1>Mot de passe oublié</h1>
            <p>Veuillez renseigner votre email. Un lien de réinitialisation de votre mot de passe sera envoyé à cette
                adresse.</p>
            {{ form(emailForm) }}
        </form>
    </div>
</div>
{% endblock %}