{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    

<div class="container my-5">
    
    <div class="row">
        
        <form method="post" class="col-12 col-lg-6 offset-lg-3">
            <h1>Connexion</h1>
            {% if error %}
                <div class="alert alert-danger">
                    Les identifiants saisies ne sont pas correctes
                </div>
            {% endif %}
            
            
            <div class="form-group">
                <input type="text" name="_username" placeholder="E-mail" class="form-control" value="{{ lastUsername }}">
            </div>
            <div class="form-group">
                <input type="password" name="_password" placeholder="Mot de passe" class="form-control">
            </div>
            <input type="hidden" name="_target_path" value="{{ path('user_login_success') }}">

                
            <button type="submit" class="btn btn-primary">Connexion</button>
            <a class="register-you" href="{{ path('user_register') }}">Vous n'avez pas de compte ?</a>
            
        </form>
    </div>
</div>



{% endblock %}
